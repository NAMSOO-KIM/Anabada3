<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="364dp"
        android:layout_height="241dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text="앨범"
            android:textSize="20dp"
            android:onClick="pic_regist"
            android:id="@+id/album"/>
        <Button
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text="사진 찍기"
            android:textSize="20dp"
            android:onClick="pic_regist"
            android:id="@+id/camera"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6_title"
            android:layout_width="107dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="제목"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText6_title"
            android:layout_width="277dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6_description"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:gravity="center_vertical"
        android:text="상세 설명"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText6_description"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button6_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="등록"
            android:textSize="24dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button6_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="닫기"
            android:textSize="24dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>