<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="251dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="364dp"
            android:layout_height="241dp"
            android:layout_gravity="center"
            android:background="@drawable/photo_frame"
            android:onClick="makeDialog"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:gravity="right|bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="86dp"
                android:layout_height="59dp"
                android:background="@drawable/ic_menu_camera" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6_title"
            android:layout_width="112dp"
            android:layout_height="46dp"
            android:fontFamily="@font/dovemayo_bold"
            android:gravity="center"
            android:text="제목: "
            android:textSize="30sp" />

        <EditText
            android:id="@+id/boardTitle"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dovemayo_bold"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6_description"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:fontFamily="@font/dovemayo_bold"
        android:gravity="center|center_vertical"
        android:text="상품 설명"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/boardDescription"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/dovemayo_bold"
        android:textSize="24sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/board_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="등록"
            android:textSize="30sp"
            android:fontFamily="@font/dovemayo_bold"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button6_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/dovemayo_bold"
            android:gravity="center"
            android:text="닫기"
            android:textSize="30sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>